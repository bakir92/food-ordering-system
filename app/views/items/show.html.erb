<h2 align="center">Item Name: <%= @item.item_name %></h2>
<div class="well col-xs-8 col-xs-offset-2">
	<h4 class="description center">
		<strong>Description:</strong>
	</h4>
	<hr>
	<%= simple_format(@item.description) %>
	<p>Category: <%= @item.category.name %></p>
	<div class="item-actions">	
		<% if logged_in? && current_user.admin? %>
		<%= link_to "Edit", edit_item_path(@item), class: "btn btn-primary btn-xs" %> |
		<%= link_to "Delete this item", item_path(@item),method: :delete,
											data: {confirm: "Are you sure you want to delete this item?"}, 
											class: "btn btn-danger btn-xs" %> |
		<% end %>												
		<%= link_to "View all items", items_path, class: "btn btn-success btn-xs" %>
	</div>
</div>