<%= render 'shared/errors', obj: @item %>
<div class="row">
	<div class="col-md-12">
		<%= form_for(@item, :html => {class: 'form-horizontal', role: 'form'}) do |f| %>
			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= f.label :item_name %>
				</div>
				<div class="col-sm-8">
					<%= f.text_field :item_name, class: 'form-control', placeholder: 'Name of an Item', autofocus: true %>
				</div>
			</div>

			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= f.label :description %>
				</div>
				<div class="col-sm-8">
					<%= f.text_area :description, rows: 10, class: 'form-control', placeholder: 'Description of Item' %>
				</div>
			</div>

			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= f.label :price %>
				</div>
				<div class="col-sm-8">
					<%= f.text_field :price, class: 'form-control', placeholder: 'Price of Item' %>
				</div>
			</div>

			<div class="form-group">
				<div class="row">
					<div class="col-sm-offset-2 col-sm-8">
						<%= f.collection_radio_buttons :category_id, Category.all, :id, :name do |r| %>
						<% r.label(class: "radio-inline input_radio") {r.radio_button(class: "radio") + r.text }%>
						<% end %>
					</div>
				</div>
			</div>

			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<%= f.submit class: 'btn btn-primary btn-lg' %>
				</div>
			</div>

		<% end %>
		<div class="col-xs-4 col-xs-offset-4">
			[ <%= link_to "Cancel request and return to Items listing", items_path %> ]
		</div>
	</div>
</div>
